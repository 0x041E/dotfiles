set $appRunMode "(C)hrome, (L)eafpad, (P)cmanfm" 
mode $appRunMode {
    bindsym c exec google-chrome-stable
    bindsym l exec leafpad
    bindsym p exec pcmanfm

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+e mode $appRunMode

set $lockModeName "(L)ock, (R)eboot, (P)oweroff, (E)xit"
mode $lockModeName {
    bindsym $mod+r exec systemctl reboot
    bindsym $mod+l mode "default"; exec xset s activate
    bindsym $mod+e exec i3-msg exit
    bindsym $mod+p exec systemctl poweroff

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+q mode $lockModeName

